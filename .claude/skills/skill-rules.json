      "description": "40+ React/Next.js optimization rules from Vercel",
      "triggers": {
        "keywords": ["react", "component", "hook", "state", "performance", "optimization"],
        "files": ["**/*.tsx", "**/*.jsx", "app/**/*", "components/**/*"]
      }
    },
    "next-best-practices": {
      "type": "technical",
