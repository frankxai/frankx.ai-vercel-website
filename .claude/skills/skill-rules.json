      "triggers": {
        "keywords": ["book", "chapter", "poetry", "spartan", "manifestation", "imagination", "library", "epub", "pdf generation"],
        "files": ["content/books/**/*", "app/books/**/*", "app/library/**/*", "data/book-reviews.ts"]
      },
      "skill_path": ".claude/skills/book-publishing/SKILL.md"
    }
