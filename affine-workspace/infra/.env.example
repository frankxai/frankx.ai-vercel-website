# AFFiNE Environment Configuration
# Copy this file to .env and customize for your deployment
# CRITICAL: Change all secrets before deploying to production!

# ==========================================
# Port Configuration
# ==========================================
AFFINE_PORT=8787

# ==========================================
# Database Configuration
# ==========================================
# CRITICAL: Change these credentials!
DB_USERNAME=affine
DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
DB_DATABASE=affine

# ==========================================
# Security Configuration
# ==========================================
# CRITICAL: Generate a strong random secret (e.g., openssl rand -hex 32)
SERVER_SECRET=CHANGE_ME_TO_RANDOM_32_CHAR_SECRET

# ==========================================
# Feature Flags
# ==========================================
# Enable AI-powered features
ENABLE_AI=true
ENABLE_COPILOT=true

# ==========================================
# AI Integration (Optional)
# ==========================================
# Uncomment and configure if using external AI services
# OPENAI_API_KEY=sk-...
# ANTHROPIC_API_KEY=sk-ant-...

# ==========================================
# Backup & Export Configuration
# ==========================================
# Backups will be stored in ../affine-backups/exports
BACKUP_ENABLED=true

# ==========================================
# Development / Debug (set to false in production)
# ==========================================
DEBUG_MODE=false
