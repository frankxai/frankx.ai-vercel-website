{
  "$schema": "https://design-tokens.org/schema.json",
  "color": {
    "background": {
      "void": { "$value": "#0a0a0b", "$type": "color", "$description": "Deep void background" },
      "space": { "$value": "#111113", "$type": "color", "$description": "Space elevated background" },
      "elevated": { "$value": "#18181b", "$type": "color", "$description": "Elevated surface" },
      "subtle": { "$value": "#1f1f23", "$type": "color", "$description": "Subtle background" }
    },
    "text": {
      "primary": { "$value": "#fafafa", "$type": "color" },
      "secondary": { "$value": "rgba(250, 250, 250, 0.85)", "$type": "color" },
      "tertiary": { "$value": "rgba(250, 250, 250, 0.65)", "$type": "color" },
      "muted": { "$value": "rgba(250, 250, 250, 0.45)", "$type": "color" }
    },
    "accent": {
      "tech": {
        "primary": { "$value": "#10b981", "$type": "color", "$description": "Emerald" },
        "secondary": { "$value": "#06b6d4", "$type": "color", "$description": "Cyan" }
      },
      "soul": {
        "primary": { "$value": "#8b5cf6", "$type": "color", "$description": "Violet" },
        "secondary": { "$value": "#f59e0b", "$type": "color", "$description": "Amber" }
      }
    }
  },
  "typography": {
    "fontFamily": {
      "sans": { "$value": "Inter, ui-sans-serif, system-ui, sans-serif", "$type": "fontFamily" },
      "display": { "$value": "Syne, Inter, ui-sans-serif, system-ui, sans-serif", "$type": "fontFamily" },
      "serif": { "$value": "Playfair Display, ui-serif, Georgia, serif", "$type": "fontFamily" },
      "mono": { "$value": "JetBrains Mono, ui-monospace, monospace", "$type": "fontFamily" }
    }
  },
  "spacing": {
    "1": { "$value": "0.25rem", "$type": "dimension" },
    "2": { "$value": "0.5rem", "$type": "dimension" },
    "4": { "$value": "1rem", "$type": "dimension" },
    "6": { "$value": "1.5rem", "$type": "dimension" },
    "8": { "$value": "2rem", "$type": "dimension" }
  },
  "borderRadius": {
    "md": { "$value": "0.75rem", "$type": "dimension" },
    "xl": { "$value": "1.25rem", "$type": "dimension" },
    "2xl": { "$value": "1.5rem", "$type": "dimension" }
  },
  "motion": {
    "duration": {
      "fast": { "$value": "150ms", "$type": "duration" },
      "normal": { "$value": "300ms", "$type": "duration" },
      "slow": { "$value": "500ms", "$type": "duration" }
    }
  }
}
