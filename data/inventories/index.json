{
  "_description": "FrankX Content Inventory Master Index",
  "_version": "2.0.0",
  "_lastUpdated": "2026-01-23",
  "_documentation": "See data/inventories/README.md and docs/ACOS_CREATOR_HUB_ARCHITECTURE.md",

  "contentPaths": {
    "drafts": "content/drafts/",
    "published": "content/blog/",
    "assets": "public/",
    "inventories": "data/inventories/"
  },

  "contentStatus": {
    "draft": {
      "location": "content/drafts/",
      "syncsToProduction": false,
      "description": "Private work in progress"
    },
    "staged": {
      "location": "content/blog/",
      "frontmatter": "draft: true",
      "syncsToProduction": true,
      "description": "Ready for review, builds but hidden"
    },
    "published": {
      "location": "content/blog/",
      "frontmatter": "draft: false",
      "syncsToProduction": true,
      "description": "Live on frankx.ai"
    }
  },

  "syncRules": {
    "include": [
      "app/",
      "components/",
      "lib/",
      "hooks/",
      "content/blog/",
      "public/",
      "data/inventories/frankx/",
      "data/inventories/ai-architect-academy/",
      "data/inventories/profiles.json",
      "data/inventories/index.json",
      "data/inventories/_schema/",
      "data/inventories/creation-pipeline.json"
    ],
    "exclude": [
      ".claude/",
      ".agent/",
      "docs/",
      "research/",
      "backups/",
      "content/drafts/",
      "data/inventories/arcanea/",
      "scripts/",
      ".worktrees/",
      ".env*",
      "node_modules/"
    ]
  },

  "brands": {
    "frankx": {
      "name": "FrankX",
      "description": "Personal brand - Oracle AI expertise made accessible to creators",
      "website": "https://frankx.ai",
      "inventories": {
        "music": "frankx/music.json",
        "art": "frankx/art.json",
        "videos": "frankx/videos.json",
        "blog": "frankx/blog-articles.json",
        "social": {
          "linkedin": "frankx/social/linkedin.json",
          "instagram": "frankx/social/instagram.json",
          "x-twitter": "frankx/social/x-twitter.json",
          "threads": "frankx/social/threads.json"
        }
      },
      "syncsToProduction": true
    },
    "ai-architect-academy": {
      "name": "AI Architect Academy",
      "description": "Educational brand - Courses, tutorials, and resources for AI practitioners",
      "website": null,
      "inventories": {
        "courses": "ai-architect-academy/courses.json",
        "tutorials": "ai-architect-academy/tutorials.json",
        "resources": "ai-architect-academy/resources.json"
      },
      "syncsToProduction": true
    },
    "arcanea": {
      "name": "Arcanea",
      "description": "Creative gaming universe - Fantasy world-building, lore, and implementations",
      "website": null,
      "inventories": {
        "lore": "arcanea/lore.json",
        "music": "arcanea/music.json",
        "art": "arcanea/art.json",
        "implementations": "arcanea/implementations.json"
      },
      "syncsToProduction": false
    }
  },
  "sharedInventories": {
    "profiles": "profiles.json",
    "schema": "_schema/inventory-types.ts"
  },
  "stats": {
    "autoGenerated": {
      "blogArticles": 51
    },
    "tracked": {
      "sunoTracks": 34,
      "arcaneaTracks": 4,
      "products": 6
    },
    "estimated": {
      "sunoTracks": 500,
      "linkedInPosts": 100,
      "instagramPosts": 50
    }
  },

  "scripts": {
    "generateBlogInventory": "scripts/generate-blog-inventory.mjs",
    "importSunoTracks": "scripts/import-suno-tracks.mjs",
    "syncToProduction": "scripts/sync-to-production.sh"
  },

  "commands": {
    "createMusic": "/create-music",
    "createArticle": "/create-article",
    "planWeek": "/plan-week",
    "inventoryStatus": "/inventory-status",
    "deploy": "/deploy"
  },

  "creatorExperience": {
    "existingSite": {
      "description": "Add ACOS to existing website project",
      "requirements": ["mkdir .claude", "mkdir content/drafts", "mkdir data/inventories"],
      "documentation": "docs/ACOS_CREATOR_HUB_ARCHITECTURE.md#scenario-a-creator-with-existing-website"
    },
    "newProject": {
      "description": "Start fresh with ACOS Creator Starter",
      "command": "npx create-acos-hub my-creator-hub",
      "documentation": "docs/ACOS_CREATOR_HUB_ARCHITECTURE.md#scenario-b-new-creator-starting-fresh"
    }
  }
}
